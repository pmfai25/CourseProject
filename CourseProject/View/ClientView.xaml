<UserControl x:Class="CourseProject.View.ClientView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ignore="http://www.ignore.com"
        mc:Ignorable="d ignore"
        DataContext="{Binding Client, Source={StaticResource Locator}}">

    <StackPanel>
        <DataGrid HorizontalAlignment="Left" VerticalAlignment="Top"
                  ItemsSource="{Binding AllClients}"/>
        <Button Content="Save changes" Command="{Binding SaveCommand}" Width="100"/>
    </StackPanel>
    
</UserControl>
